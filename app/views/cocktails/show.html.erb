<div class="navbar-cocktail">This Specific Cocktail</div>


<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
  <%= @cocktail.name %>
</div>
<div class="navbar-lewagon">
  <span class="navbar-brand">
    <%= link_to "Add a new Cocktail", new_cocktail_path, class: "btn btn-ghost" %>
    <%= link_to "Add a new Ingredient", new_ingredient_path, class: "btn btn-ghost" %>
    <%= link_to "Home", cocktails_path, class: "btn btn-ghost" %>
  </span>
</div>

<% @cocktail.doses.each do |cocktail_dose| %>
  <div class="notification">
    <i class="fab fa-ioxhost"></i>
    <div class="notification-content">
      <p><small><%= cocktail_dose.ingredient.name %></small></p>
      <p><%= cocktail_dose.description %></p>
    </div>

    <div class="notification-actions">
      <%= link_to  dose_path(cocktail_dose.id), method: :delete do %>
      Delete <i class="far fa-trash-alt"></i>
      <%end%>
    </div>
  </div>
<% end %>

<div class="notification">
  <div class="form-container form-group">
  <%= simple_form_for([@cocktail, @dose]) do |f| %>
    <%= f.error_notification %>
    <%= f.input :description, required: false,  wrapper_html: { class: "f-item-margin" }  %>
    <%= f.association :ingredient, wrapper_html: { class: "f-item-margin " }  %>
    <%= f.submit class: "btn-ghost f-item-margin" %>
    <%= link_to "Go back", cocktails_path , class: "btn btn-ghost" %>
  <% end %>
</div>
</div>

<div class="notification">
   <i class="fas fa-comments"></i>
    <div class="notification-content">
      <small>SEE THE COMMENTS BELOW   -  Add a comment:
      <%= link_to new_cocktail_review_path(@cocktail.id) do %>
         <i class="far fa-plus-square"></i>
      <%end%>
    </small>
    </div>
  </div>
<% @cocktail.reviews.each do |cocktail_reviews| %>
  <div class="notification">
   <i class="fas fa-comments"></i>
    <div class="notification-content">
      <p><small><%= cocktail_reviews.rating %></small></p>
      <p><%= cocktail_reviews.content%></p>
    </div>

  </div>
<% end %>

